<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Recycler">
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="Recycler.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Recycler.Grid">
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="ExpandedTitleTA" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">22sp</item>
    </style>
</resources>